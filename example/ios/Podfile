ENV['RCT_NEW_ARCH_ENABLED'] = '1'

# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, min_ios_version_supported
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'ReactNativeCommonComponentsExample' do
  config = use_native_modules!

  use_frameworks! :linkage => :static
  $RNFirebaseAnalyticsWithoutAdIdSupport = true
  $RNFirebaseAsStaticFramework = true

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  # --- START FIX FOR RN FIREBASE CI ERRORS ---
  # Define the absolute path to React Native headers relative to the Pods directory
  def react_native_root
    # This reliably finds the node_modules path from the Podfile's location
    return File.join(File.dirname(__FILE__), '../../node_modules/react-native')
  end

  post_install do |installer|
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|

        # FIX 1: Allow Non-Modular Includes (Addresses the core 'non-modular header' failure)
        config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'

        # FIX 2: Explicitly set Header Search Paths for Firebase Pods
        # This addresses the 'declaration of RCTBridgeModule must be imported from module' error
        # by ensuring the compiler finds React Native headers correctly.
        if target.name.start_with?('RNFB') || target.name.include?('React-Core')
          rn_path = react_native_root()

          config.build_settings['HEADER_SEARCH_PATHS'] ||= '$(inherited)'

          # Add the absolute path to the React-Core headers with recursive search
          config.build_settings['HEADER_SEARCH_PATHS'] = config.build_settings['HEADER_SEARCH_PATHS'].to_s + " \"#{rn_path}/React\" \"#{rn_path}/ReactCommon/yoga\""
        end
      end
    end

    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )
  end
end
